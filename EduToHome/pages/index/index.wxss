/**index.wxss**/
.body-index{
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;

}
 scroll-view {
  height: 100%;
} 
.index-list{
  width: 100%;
  padding: 28rpx 24rpx;
  display: flex;
  border-top: 1px solid #ccc;
  box-sizing: border-box;
}
.headimg{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.ilist-r{
  margin-left: 20rpx;
  width:100%;
}
.iname,.inotes{
  display: inline-flex;
  font-size: 32rpx;
  color: #5A6589;
}
.permissions{
  float: right;
  position: relative;
  top: 4rpx;
  font-size: 46rpx;
}
.isubject{
  font-size: 28rpx; 
}
.jobimg{
  width: 400rpx;
  height: 270rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.ischool{
  font-size: 22rpx; 
  color: #999999;
}
.itime{
  font-size: 22rpx; 
  display: inline-flex;
  position: relative;
  top: -5rpx;
  color: #999999;
}
.comment{
  float: right;
  position: relative;
}
.comment-info{
  width: 500rpx;
  height: 60rpx;
  background-color: rgba(51, 51, 51, 0.9);
  position: absolute;
  right:50rpx;
  top: -5rpx;
  border-radius: 5px;
  color: #797979;
  padding: 5rpx 0;
  box-sizing: border-box;
  z-index: 99;
}
.comment-hide{
  display: none;  
}
.comment-show{
  display: block;   
}
.comment-info::after{
  content: '';
  display: inline-block;
  position: absolute;
  height: 0px;
  width: 0px;
  border-top: 10rpx solid transparent;
  border-left: 10rpx solid rgba(51, 51, 51, 0.9);
  border-bottom: 10rpx solid transparent;
  right:-9rpx;
  top: 20rpx;  
}
.iclapimg{
  width: 42rpx;
  height: 42rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
  vertical-align: middle;
}
.icon-zan{
  display: inline-flex;
  justify-content:center;
  padding: 0 30rpx;
  color: #BE9680;
}
.comments{
  display: inline-flex;
  font-size: 30rpx;
  color: #000;
  padding: 0 30rpx;
}

.comment-infos{
  border-radius: 5rpx;
  height: 60rpx;
  background-color: #E4E4E4;
  color: #797979;
  padding: 5rpx 0;
  box-sizing: border-box;
  position: relative;
  font-size: 24rpx;
  /* overflow-y: hidden; */
  display: none;  /*控制显示*/
}
.comment-infos::before{
  content: '';
  display: inline-block;
  position: relative;
  height: 0px;
  width: 0px;
  border-top: 10rpx solid transparent;
  border-left: 10rpx solid #e3e3e3;
  border-bottom: 10rpx solid transparent;
  left:50rpx;
  top:-35rpx;  
  transform:rotate(270deg);
}
.numbers{
  width: 59rpx;
  overflow: hidden;
  display: inline-block;
  margin-right:20rpx;
}
.icon-02{
  display: inline-flex;
  color: #BE9680; 
}
.icon-pingluns{
  display: inline-flex;
  color: #BE9680;
}
.iclapimgs{
  width: 42rpx;
  height: 42rpx;
  padding: 0 15rpx;
  margin-top:-10rpx;
  vertical-align: middle; 
}
.icons{
  padding: 0 10rpx;
}
.photograph{
  display: inline-block;
  width: 170rpx;
  height: 170rpx;
  position: fixed;
  right:30rpx;
  bottom:80rpx;
}

.more{
  width: 42rpx;
  height: 26rpx;
}



/* 评论弹窗信息 */
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 800rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #333333;
  /* padding-top: 20rpx; */
  padding:0 28rpx;
  padding-top: 10rpx;
  box-sizing:border-box;
}
.close{
  width: 50rpx;
  float: right;
  color: #fff;
}
.commentInfos{
  width:100%;
  height:100%;
  background:#333;
  margin-top: 50rpx;
  box-sizing:border-box;
}
.commentList{
  border-bottom: 1px solid #515151;
  padding:15rpx 0;
}
.commTitle{
	font-size: 32rpx;
	color: #ffffff;
}
.commTime{
  font-size: 20rpx;
	color: #999999;
  margin-top: 3rpx;
}
/* 回复消息 */
.replyMsg{
  width:auto;
  border-radius:10rpx;
  background-color: #515151;
  padding: 10rpx;
  margin-left:35rpx;
  margin-top:10rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.replyMsg::before{
  content: '';
  display: inline-block;
  position: relative;
  height: 0px;
  width: 0px;
  border-top: 10rpx solid transparent;
  border-left: 10rpx solid #515151;
  border-bottom: 10rpx solid transparent;
  left:50rpx;
  top:-43rpx;  
  transform:rotate(270deg);
}
.commTitles{
  font-size:28rpx;
  color:#AAFFE2;
  display:inline;
  text-align: left;
}
.commTimes{
  font-size: 20rpx;
  color: #999999;
}
